border-radius(n)
  -webkit-border-radius n
  -moz-border-radius n
  border-radius n

*
  margin 0
  padding 0

body
  background-color #8c8c8c

.hidden
  display none

nav
  height 50px
  position relative

  ul
    position absolute

  li
    color white
    margin 0 20px
    display inline-block

.nav-bg
  width 100%
  height 100%
  position absolute
  background-color black
  opacity 0.3

.wrapper
  width 1280px
  margin 0 auto
  display table
  box-sizing border-box
  padding 20px 90px 0

  & > *
    float left

.search-sidebar
  width 300px

.view
  width 800px

.methods
  list-style disc inside
